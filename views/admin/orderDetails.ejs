    <style>
       .order-progress {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    margin: 20px 0;
    width: 100%;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

/* Main Line */
.order-progress::before {
    content: "";
    position: absolute;
    top: 10px; /* Center with the circles */
    left: 0;
    width: 100%;
    height: 2px;
    background-color: #ddd; /* Default line color */
    z-index: 0;
}

/* Active Line - grows dynamically based on status */
.order-progress .progress-line-active {
    position: absolute;
    top: 10px;
    left: 0;
    height: 2px;
    background-color: green;
    z-index: 1;
    transition: width 0.3s ease;
}

/* Step container */
.progress-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    z-index: 2;
}

/* Dots */
.progress-step .step-circle {
    width: 20px;
    height: 20px;
    background-color: #ccc;
    border-radius: 50%;
    position: relative;
}

/* Active Dots */
.progress-step.active .step-circle {
    background-color: green;
}

/* Step Labels */
.progress-step span {
    margin-top: 5px;
    font-size: 12px;
}

/* Optional - Cancel style */
.progress-step .step-circle.bg-danger {
    background-color: red;
}


        
        .product-img {
            max-width: 100px;
            height: auto;
        }
        
        .status-successful {
