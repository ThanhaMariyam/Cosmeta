<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cosmeta - User Management</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Bootstrap Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <style>
      .sidebar {
        background-color: #1a1a1a;
        min-height: 100vh;
        color: white;
        padding-top: 20px;
      }

      .sidebar .nav-link {
        color: #ffffff;
        padding: 10px 20px;
        margin: 5px 0;
      }

      .sidebar .nav-link:hover,
      .sidebar .nav-link.active {
        background-color: #333;
        border-radius: 5px;
      }

      .search-container {
        background-color: rgb(230, 230, 230);
        border-radius: 20px;
        padding: 5px 15px;
      }

      .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #e9ecef;
      }

      .profile-icon {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .profile-icon.blue {
        background-color: #007bff;
      }
      .profile-icon.red {
        background-color: #dc3545;
      }
      .profile-icon.teal {
        background-color: #20c997;
      }

      .pagination {
        margin-top: 20px;
      }

      .main-content {
        background-color: #f8f9fa;
        min-height: 100vh;
        padding: 20px;
      }

      .top-bar {
        background-color: white;
        padding: 10px 20px;
        border-bottom: 1px solid #dee2e6;
      }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-auto sidebar">
          <div class="d-flex align-items-center mb-4 px-3">
            <h4 class="mb-0">Cosmeta</h4>
          </div>

          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/admin/dashboard"
                ><i class="bi bi-house-door me-2"></i> Dashboard</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/admin/user"
                ><i class="bi bi-people me-2"></i> Users</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/products"
                ><i class="bi bi-box me-2"></i> Products</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/category"
                ><i class="bi bi-grid me-2"></i> Category</a
              >
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/admin/brand"
                ><i class="bi bi-bookmark me-2"></i> Brands</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#"
                ><i class="bi bi-cart me-2"></i> Orders</a
              >
            </li>

            <li class="nav-item">
              <a class="nav-link" href="#"
                ><i class="bi bi-ticket-perforated me-2"></i> Coupons</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#"
                ><i class="bi bi-tag me-2"></i> Offers</a
              >
            </li>
          </ul>
          <a href="/admin/logout">
            <div class="px-3 mt-4">
              <button class="btn btn-outline-light mt-auto">
                <i class="bi bi-box-arrow-right me-2"></i>
                Logout
              </button>
            </div>
          </a>
        </div>

        <!-- Main Content -->
        <div class="col p-0">
          <!-- Top Bar -->
          <div
            class="top-bar d-flex justify-content-between align-items-center"
          >
            <h4 class="mb-0">Users</h4>
            <div class="d-flex align-items-center">
              <div class="search-container me-3">
                <input
                  type="text"
                  id="userSearch"
                  class="form-control border-0"
                  placeholder="Search for users"
                />
              </div>
            </div>
          </div>

          <!-- Users Table -->
          <div class="main-content">
            <div class="table-responsive">
              <table class="table bg-white rounded">
                <thead>
                  <tr>
                    <th>Index</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody id="userTable">
                  <% users.forEach((user, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td><%= user.isBlocked ? "Blocked" : "Active" %></td>
                    <td>
                      <% if (user.isBlocked) { %>
                      <form
                        action="/admin/user/unblock/<%= user._id %>"
                        method="POST"
                        style="display: inline"
                      >
                        <button type="submit" class="btn btn-success btn-sm">
                          Unblock
                        </button>
                      </form>
                      <% } else { %>
                      <form
                        action="/admin/user/block/<%= user._id %>"
                        method="POST"
                        style="display: inline"
                      >
                        <button type="submit" class="btn btn-danger btn-sm">
                          Block
                        </button>
                      </form>
                      <% } %>
                    </td>
                  </tr>
                  <% }); %>

                  <!-- Add more rows as needed -->
                </tbody>
              </table>
            </div>

            <!-- Pagination -->
            <nav aria-label="Page navigation" class="mt-4">
              <ul class="pagination justify-content-center">
                <li class="page-item <%= currentPage===1?'disabled':'' %>">
                  <a
                    class="page-link"
                    href="/admin/user?page=<%= currentPage-1 %>"
                    aria-label="Previous"
                  >
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
                <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                  <a class="page-link" href="/admin/user?page=<%= i %>"
                    ><%= i %></a
                  >
                </li>
                <% } %>
                <li
                  class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>"
                >
                  <a
                    class="page-link"
                    href="/admin/user?page=<%= currentPage + 1 %>"
                    aria-label="Next"
                  >
                    <span aria-hidden="true">&raquo;</span>
                  </a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>

    <script>
      const searchInput = document.getElementById("userSearch");
      const productTable = document.getElementById("userTable");
      const rows = productTable.getElementsByTagName("tr");

      searchInput.addEventListener("input", () => {
        const filter = searchInput.value.toLowerCase();

        // Loop through all table rows
        for (let i = 0; i < rows.length; i++) {
          const cells = rows[i].getElementsByTagName("td");
          let match = false;

          // Check each cell in the row
          for (let j = 0; j < cells.length; j++) {
            if (cells[j] && cells[j].innerText.toLowerCase().includes(filter)) {
              match = true;
              break;
            }
          }

          // Toggle row visibility based on match
          rows[i].style.display = match ? "" : "none";
        }
      });
    </script>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
  </body>
</html>
