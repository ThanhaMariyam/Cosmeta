<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>product details</title>
  <link rel="stylesheet" href="/userSignup.css" />
  
  <link rel="stylesheet" href="/home.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
  <link rel="stylesheet" href="/brandProdDetail.css" />
  <link rel="stylesheet" href="/responsive.css">
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

  <style>
    .sold-out-btn {
      background-color: #a0a0a0 !important;
      border: none !important;
      cursor: not-allowed !important;
      pointer-events: none;
      height: 43px;
      width: 200px;
      margin-top: 10px;
    }
  </style>
</head>

<body>

  <%- include('../partials/nav.ejs') %>

  <div class="box container-fluid">
    <div class="item col-md-4">
      <a href="/">Home</a>
      <a href="/category">Category</a>
      <a style="color: purple" href="">Brand</a>
      <a href="">About us</a>
      <a href="">Contact us</a>
    </div>
    <%- include('../partials/header.ejs') %>
  </div>

  <div class="bread">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/brand">Brand</a></li>
        <li class="breadcrumb-item">
          <a href="/products?brand=<%= brand._id %>"><%= brand.name || 'unknown brand' %></a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
          <%= product.name %>
        </li>
      </ol>
    </nav>
  </div>



  <div style="margin-bottom: 30px; margin-top: 20px" class="container">
    <div class="row">
      <div style="display: flex; height: 400px" class="col-md-6">
        <div class="col-3">
          <% product.images.forEach((image, index) => { %>
          <div style="margin-top: 10px; margin-left: 20px" class="col-6">
            <img style="height: 120px; object-fit: contain; margin-right: 10px" src="<%= image %>" class="img-fluid small-image" alt="<%= product.name %> - Shade <%= index + 1 %>" onclick="updateLargeImage('<%= image %>')" />
          </div>
          <% }); %>
        </div>

        <div style="
              flex-grow: 1;
              display: flex;
              margin-top: 40px;
              margin-left: 80px;
              overflow: hidden;
              position: relative;
            ">
          <img id="largeImage" style="
                object-fit: contain;
                height: 320px;
                transition: transform 0.3s ease;
                cursor: zoom-in;
              " src="<%= product.images[0] %>" class="img-fluid" alt="<%= product.name %>" />
        </div>
      </div>
      <div class="col-md-4">
        <h3 style="margin-top: 10px"><%= product.name %></h3>
        <% if (highestDiscount > 0) { %>
        <del style="color: rgb(174, 0, 0);">₹<%= product.price %></del>
        <strong>₹<%= discountedPrice %></strong>
        <span style="color: rgb(101, 22, 104);font-size: medium;font-weight: 500;">(<%= highestDiscount %>% OFF)</span>
        <% } else { %>
        <strong>₹<%= product.price %></strong>
        <% } %>
        <p class="rating">
          <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i> <i class="bi bi-star-fill"></i><i class="bi bi-star-half"></i>4.5/5
        </p>

        <p class="stok">Stock:<%= product.stock %></p>

        <p style="margin-top: 5px"><%= product.description %></p>
        <div class="shades-container">
          Shade: <% product.shades.forEach(shade => { %>
          <div class="shade-circle"style="background-color: <%= shade.color %>" title="<%= shade.name %>"></div>
          <% }) %>

        </div>
        <p>Brand: <span style="color: purple;font-weight: 800;"><%= brand.name %></span></p>


        <div class="d-flex mb-3">
          <% if (isProductExist) { %>
          <button class="btn btn-primary" onclick="goToCart()">
            <i class="bi bi-bag-fill me-2"></i>Go to cart
          </button>
          <% } else if (product.stock === 0) { %>
          <button class="btn btn-secondary sold-out-btn" disabled>
            Sold Out
          </button>
          <% } else { %>
          <button id="add-to-cart-btn-<%= product._id %>" class="btn btn-primary add-cart-btn" data-product-id="<%= product._id %>" onclick="addToCart('<%= product._id %>', 'add-to-cart-btn-<%= product._id %>')">
            <i class="bi bi-bag-fill me-2"></i>Add to Cart
          </button>
          <% } %>


          <% if (isWishExist) { %>
          <button class="wishlist-btn" data-id="<%= product._id %>" onclick="removeFromWishlist('<%= product._id %>')" style="border: 1px solid purple; height: 44px; margin-top: 10px; margin-left: 2px; padding-top: 3px;
                  padding-left: 15px; padding-right: 15px; font-size: x-large; font-weight: bold;">
            <i style="color: rgb(167, 68, 136)" class="bi bi-heart-fill"></i>
          </button>
          <% } else { %>
          <button class="btn addWish wishlist-btn" data-id="<%= product._id %>" onclick="addToWishlist('<%= product._id %>')" style="border: 1px solid purple; height: 44px; margin-top: 10px; margin-left: 2px; padding-top: 3px;
                  padding-left: 15px; padding-right: 15px; font-size: x-large; font-weight: bold;">
            <i style="color: rgb(167, 68, 136)" class="bi bi-heart"></i>
          </button>
          <% } %>


        </div>
      </div>
    </div>
  </div>
  <hr style="border: 1px solid grey" />

  <%- include('../partials/review.ejs') %>

  <div style="margin-bottom: 30px" class="container">
    <h3 style="
          text-align: center;
          color: purple;
          margin-top: 25px;
          margin-bottom: 18px;
        ">
      Similar Collections
    </h3>
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
      <% similarProducts.forEach(product => { %>
      <div class="col-md-3">
        <div class="card h-100">
          <img src="<%= product.images[0] %>" class="img-fluid card-img-top" alt="<%= product.name %>" />
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <% if (product.highestDiscount > 0) { %>
            <p class="card-text mb-1">
              <del style="color: rgb(174, 0, 0);">₹<%= product.price %></del>
            </p>
            <p class="card-text mb-1">
              <strong>₹<%= product.discountedPrice %></strong>
              <span style="color: rgb(101, 22, 104); font-size: medium; font-weight: 500;">
                (<%= product.highestDiscount %>% OFF)
              </span>
            </p>
            <% } else { %>
            <p class="card-text">
              <strong>₹<%= product.price %></strong>
            </p>
            <% } %>

            <% if (product.stock <= 0) { %>
            <p style="
                  background-color: rgb(255, 255, 255);
                  border: none;
                  color: rgb(138, 0, 0);
                  position: absolute;
                  padding: 1px 20px;
                  margin-top: -150px;
                  margin-left: 85px;
                  font-size: small;
                  font-weight: bold;
                ">
              Out of Stock
            </p>
            <% } else if(product.stock <=3) { %>
            <p style="
                  background-color: rgb(255, 255, 255);
                  border: none;
                  color: rgb(138, 0, 0);
                  position: absolute;
                  padding: 1px 20px;
                  margin-top: -150px;
                  margin-left: 85px;
                  font-size: small;
                  font-weight: bold;
                ">
              Only few left
            </p>
            <% } %>
            <a href="/productDetails/<%= product._id %>" class="btn btn-primary">View Product</a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>

  <%- include('../partials/footer') %>
  <script>
    function updateLargeImage(imageUrl) {
      const largeImage = document.getElementById("largeImage");
      largeImage.src = imageUrl;
    }
    largeImage.addEventListener("click", (e) => {
      const isZoomed = largeImage.style.transform === "scale(2)";
      largeImage.style.transform = isZoomed ? "scale(1)" : "scale(2)";
      largeImage.style.cursor = isZoomed ? "zoom-in" : "zoom-out";
    });


    largeImage.addEventListener("mousemove", (e) => {
      if (largeImage.style.transform === "scale(2)") {
        const rect = largeImage.getBoundingClientRect();
        const x = ((e.clientX - rect.left) / rect.width) * 100;
        const y = ((e.clientY - rect.top) / rect.height) * 100;
        largeImage.style.transformOrigin = `${x}% ${y}%`;
      }
    });
  </script>
  <script src="/script/cart.js"></script>

  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <script src="/script/search.js"></script>
  <script src="/script/wishlist.js"></script>
</body>

</html>