     <%- include('../partials/footer') %>
     <script>
     document.addEventListener("DOMContentLoaded", function () {
      document.querySelectorAll(".cart-item").forEach(cartItem => {
          let quantityInput = cartItem.querySelector(".quantity-input input");
          let minusBtn = cartItem.querySelector(".quantity-input button:first-child");
          let plusBtn = cartItem.querySelector(".quantity-input button:last-child");
          let deleteBtn = cartItem.querySelector(".text-danger"); 
          let productId = cartItem.getAttribute("data-id");
  
          // âœ… Increment quantity
          plusBtn.addEventListener("click", async function () {
              let newQuantity = parseInt(quantityInput.value) + 1;
              if (newQuantity <= 5) {
                  await updateCart(productId, newQuantity);
                  quantityInput.value = newQuantity;
              } else {
                  Toastify({
                      text: "You can only purchase up to 5 units of this product.",
                      duration: 1000,
                      close: true,
                      gravity: "bottom",
                      position: "center",
                      backgroundColor: "purple",
                  }).showToast();
              }
          });
  
          // âœ… Decrement quantity
          minusBtn.addEventListener("click", async function () {
              let newQuantity = parseInt(quantityInput.value) - 1;
              if (newQuantity >= 1) { // Prevent negative quantity
                  await updateCart(productId, newQuantity);
                  quantityInput.value = newQuantity;
              }
          });
  
          // âœ… Delete item from cart
          deleteBtn.addEventListener("click", function () {
              const modal = new bootstrap.Modal(document.getElementById('removeConfirmModal'));
              modal.show();
  
              // Handle Remove button inside modal
              document.getElementById("confirmRemove").onclick = async function () {
                  await removeFromCart(productId);
                  modal.hide();
              };
  
              // Handle Add to Wishlist button inside modal
              document.getElementById("addToWishlist").onclick = async function () {
                  await addToWishlist(productId);
                   removeFromCart(productId);
                  modal.hide();
              };
          });
  
      });
  
      // âœ… Function to update cart
      async function updateCart(productId, newQuantity) {
          console.log(productId, newQuantity);
          try {
              const response = await fetch("/cart/update", {
                  method: "POST",
                  headers: { "Content-Type": "application/json" },
                  body: JSON.stringify({ productId, quantity: newQuantity })
              });
  
              const result = await response.json();
              console.log(result);
  
              if (!result.success) {
                  console.error("Error updating cart");
              } else {
                  window.location.reload();  // âœ… Reload only on success
              }
          } catch (error) {
              console.error("Error:", error);
          }
      }
  
      // âœ… Function to remove item from cart
      async function removeFromCart(productId) {
          try {
              const response = await fetch("/cart/remove", {
                  method: "POST",
                  headers: { "Content-Type": "application/json" },
                  body: JSON.stringify({ productId })
              });
  
              const result = await response.json();
              if (result.success) {
                  window.location.reload();  // âœ… Reload only if successful
              } else {
                  console.error("Error removing item");
              }
          } catch (error) {
              console.error("Error:", error);
          }
      }
  
  });
</script>  
