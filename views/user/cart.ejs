                  <div style="margin-right: 100px;" class="col-md-4">
                    <h5 class="card-title"><%= item.productId.name %>
                    </h5>
                    <div class="rating">
                      â˜…â˜…â˜…â˜…â˜† <span class="text-muted">4.5/5</span>
                    </div>
                    <p class="card-text"> <i class="bi bi-currency-rupee"></i><%= item.productId.price %></p>
