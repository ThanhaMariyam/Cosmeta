<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

  <link rel="stylesheet" href="/userSignup.css">
  <link rel="stylesheet" href="/userBrand.css">
  <link rel="stylesheet" href="/sidebar.css">
  <style>
    .back {
      padding: 5px 10px;
      border: none;
      background-color: rgb(255, 255, 255);
      color: rgb(115, 8, 106);
      font-weight: bold;
      border-radius: 10px;
    }

    .password-wrapper {
      position: relative;
      display: flex;
      align-items: center;
    }

    .password-wrapper input {
      width: 100%;
      padding-right: 30px;
    }

    .toggle-password {
      position: absolute;
      right: 10px;
      cursor: pointer;
      user-select: none;
      display: none;
    }
  </style>
</head>

<body>
  <div class="container-fluid  ">
    <div class="row">

      <%- include('../partials/sidebar.ejs') %>





      <div class="row justify-content-center">
        <div style="margin-left: 550px; margin-top: -900px;"><a href="/profile"><button class="back">
              <-Back to profile</button></a></div>
        <div style="margin-top: -800px;" class="col-md-6">
          <h2 class="mb-4">Change password</h2>

          <form action="/changePassword" method="post">
            <div class="form-group">
              <label for="currentPassword">Current password</label>
              <div class="password-wrapper">
                <input type="password" class="form-control password-input" id="currentPassword" placeholder="Enter current password" name="currentPassword">
                <span class="toggle-password" onclick="togglePassword('currentPassword', this)">
                  <i class="bi bi-eye-slash-fill"></i>
                </span>
              </div>
            </div>

            <div class="form-group">
              <label for="newPassword">New password</label>
              <div class="password-wrapper">
                <input type="password" class="form-control password-input" id="newPassword" placeholder="Enter new password" name="newPassword">
                <span class="toggle-password" onclick="togglePassword('newPassword', this)">
                  <i class="bi bi-eye-slash-fill"></i>
                </span>
              </div>
            </div>

            <div class="form-group">
              <label for="confirmPassword">Confirm new password</label>
              <div class="password-wrapper">
                <input type="password" class="form-control password-input" id="confirmPassword" placeholder="Confirm new password" name="confirmPassword">
                <span class="toggle-password" onclick="togglePassword('confirmPassword', this)">
                  <i class="bi bi-eye-slash-fill"></i>
                </span>
              </div>
            </div>

            <p style="font-size: small; margin-top: 0; margin-bottom: 0;" class="text-danger"><%-message %></p>
            <button type="submit" class="btn btn-primary btn-block">Change password</button>
          </form>
        </div>
      </div>



    </div>
  </div>


  <%- include('../partials/footer') %>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const passwordFields = document.querySelectorAll(".password-input");

      passwordFields.forEach(input => {
        const eyeIcon = input.nextElementSibling;

        input.addEventListener("focus", function() {
          eyeIcon.style.display = "inline";
        });

        input.addEventListener("blur", function() {
          if (input.value === "") {
            eyeIcon.style.display = "none";
          }
        });
      });
    });

    function togglePassword(inputId, eyeIcon) {
      const passwordField = document.getElementById(inputId);
      const icon = eyeIcon.querySelector("i");

      if (passwordField.type === "password") {
        passwordField.type = "text";
        icon.classList.remove("bi-eye-slash-fill");
        icon.innerHTML = "üëÅÔ∏è‚Äçüó®Ô∏è";
      } else {
        passwordField.type = "password";
        icon.innerHTML = "";
        icon.classList.add("bi", "bi-eye-slash-fill");
      }
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>