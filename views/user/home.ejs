  </head>
  <body>
    <%- include('../partials/nav.ejs') %>

    <div class="box">
      <div class="item">
        <a style="color: purple" href="">Home</a>
        <a href="/category">Category</a>
        <a href="/brand">Brand</a>
        <a href="">About us</a>
        <a href="">Contact us</a>
      </div>
      <%- include('../partials/header.ejs') %>
    </div>

    <img
      style="height: 300px; width: 93%; margin-top: 10px; margin-left: 50px"
      class="img-fluid"
      src="/image/DALLÂ·E 2025-01-26 12.28.16 - A visually stunning and modern image of a makeup products display, featuring elegant and stylish arrangements of lipsticks, eyeshadow palettes, brushe.webp"
      alt="Image not loading"
    />
    <img
      style="width: 98%; margin-left: 20px; margin-top: 10px; "
      src="/image/1.jpg"
      alt=""
    />

    <div class="container pics">
      <h3 style="color: purple; margin-top: 20px" class="mb-4 text-center">
        Our Latest Products
      </h3>
      <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
        <% products.forEach(function(product) { %>
        <div class="col">
          <div class="card h-100">
            <a
                href="/productDetails/<%= product._id %>"
               style="text-decoration: none; color: black;"
                >
            <img
              src="<%= product.images[0] %>"
              class="img-fluid card-img-top"
              alt="<%= product.name %>"
            />
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text">
                <i class="bi bi-currency-rupee"></i><%= product.price %>
              </p>
            </a>
              <% if (product.stock <= 0) { %>
              <p
                style="
                  background-color: rgb(255, 255, 255);
                  border: none;
                  color: rgb(138, 0, 0);
                  position: absolute;
                  padding: 1px 20px;
                  margin-top: -150px;
                  margin-left: 85px;
                  font-size: small;
                  font-weight: bold;
                "
              >
                Out of Stock
              </p>
              <% } else if(product.stock <=3) { %>
              <p
                style="
                  background-color: rgb(255, 255, 255);
                  border: none;
                  color: rgb(138, 0, 0);
                  position: absolute;
                  padding: 1px 20px;
                  margin-top: -150px;
                  margin-left: 85px;
                  font-size: small;
                  font-weight: bold;
                "
              >
                Only few left
              </p>
              <% } %>
              <div class="d-flex mb-3" style="margin-left: 30px;">
                <% if(productInCart.includes(product._id.toString())) { %>
                  <button class="btn btn-primary" onclick="goToCart()">
                    <i class="bi bi-bag-fill me-2"></i>Go to Cart
                </button>

                 <% } else{ %>

                <button id="add-to-cart-btn-<%= product._id %>" class="btn btn-primary" onclick="addToCart('<%= product._id %>', 'add-to-cart-btn-<%= product._id %>')">
                  <i class="bi bi-bag-fill me-2"></i>Add to Cart
              </button>
              <% } %>
                
              <button
              style="border: 1px solid purple; height: 44px; margin-top: 10px; margin-left: 2px; padding-top: 3px;
              padding-left: 15px; padding-right: 15px; font-size: x-large; font-weight: bold;"
              class="btn addWish"
              data-id="<%= product._id %>"
              onclick="addToWishlist('<%= product._id %>')">
              <i style="color: rgb(167, 68, 136)" class="bi bi-heart"></i>
          </button>
              
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
