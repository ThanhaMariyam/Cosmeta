    <script>
        let timeLeft = 30;
        let timerId = null;

        function startTimer() {
            const timerElement = document.getElementById('timer');
            const verifyButton = document.getElementById('verifyButton');
            const inputs = document.querySelectorAll('.otp-input');

            timerId = setInterval(() => {
                timeLeft--;
                timerElement.textContent = `Time remaining: ${timeLeft}s`;

                if (timeLeft <= 10) {
                    timerElement.classList.add('warning');
                }

                if (timeLeft <= 0) {
                    clearInterval(timerId);
                    timerElement.textContent = 'Time expired!';
                    verifyButton.disabled = true;
                    inputs.forEach(input => {
                        input.disabled = true;
                    });
                    document.getElementById('otp-error').textContent = 'OTP expired. Please request a new one.';
                }
            }, 1000);
        }

        // Start timer when page loads
        window.onload = startTimer;

        function moveToNext(input, index) {
            if (input.value.length === 1) {
                const inputs = document.querySelectorAll('.otp-input');
                if (index < inputs.length - 1) {
                    inputs[index + 1].focus();
                }
            }
            validateInput(input);
        }

        function validateInput(input) {
            if (!/^\d*$/.test(input.value)) {
                input.value = '';
                document.getElementById('otp-error').textContent = 'Please enter numbers only';
            } else {
                document.getElementById('otp-error').textContent = '';
            }
        }

        function validateOTP(event) {
            event.preventDefault(); // Prevent default form submission

            if (timeLeft <= 0) {
                document.getElementById('otp-error').textContent = 'OTP expired. Please request a new one.';
                return false; // Return false to prevent submission
            }

            const inputs = document.querySelectorAll('.otp-input');
            const otp = Array.from(inputs).map(input => input.value).join('');

            if (otp.length !== 4) {
                document.getElementById('otp-error').textContent = 'Please enter all 4 digits';
                return false; // Return false to prevent submission
            }

            if (!/^\d{4}$/.test(otp)) {
                document.getElementById('otp-error').textContent = 'Invalid OTP format';
                return false; // Return false to prevent submission
            }

            // If validation is successful, you can manually submit the form
            console.log('OTP Submitted:', otp);

            // Submit the form using JavaScript
            event.target.submit(); // This will trigger the form submission to the server
            return true;
        }




