<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
  <link rel="stylesheet" href="/sidebar.css">
  <link rel="stylesheet" href="/home.css">
  <link rel="stylesheet" href="/userSignup.css">
  <link rel="stylesheet" href="/search.css">
  <style>
    .sold-out-btn {
      background-color: #a0a0a0 !important;
      border: none !important;
      cursor: not-allowed !important;
      pointer-events: none;
      height: 43px;
      width: 120px;
      margin-top: 10px;
    }
  </style>
</head>

<body>
  <%- include('../partials/nav.ejs') %>

  <div class="box">
    <div class="item">
      <a href="/">Home</a>
      <a href="/category">Category</a>
      <a href="/brand">Brand</a>
      <a href="">About us</a>
      <a href="">Contact us</a>
    </div>
    <%- include('../partials/header.ejs') %>
  </div>

  <div class="container-fluid">
    <% if (wishlist && wishlist.products && wishlist.products.length > 0) { %>
    <h3 style="color: purple; text-align: center; margin-top: 20px; margin-bottom: 30px;">Your Wishlist</h3>
    <% } %>

    <div class="d-flex">
      <div class="col-md-3 col-lg-2 sidebar">
        <div class="avatar"><%= user.username.charAt(0).toUpperCase() %></div>
        <div class="mb-2"><%= user.username %></div>
        <% if(user.bonusPoints>0){ %>
        <div class="bonus-badge mb-4">üéÅ <%= user.bonusPoints %> bonuses available</div>
        <% } %>

        <nav class="nav flex-column">
          <a class="nav-link" href="/orders"><i class="bi bi-bag"></i> Orders</a>
          <a class="nav-link active" href="#"><i class="bi bi-heart"></i> Wishlist</a>
          <a class="nav-link" href="/wallet"><i class="bi bi-wallet2"></i> Wallet</a>

          <div class="mt-4 mb-2 text-muted">Manage account</div>
          <a class="nav-link" href="/profile"><i class="bi bi-person"></i> Personal info</a>
          <a class="nav-link" href="/address"><i class="bi bi-geo-alt"></i> Addresses</a>

          <div class="mt-4 mb-2 text-muted">Customer service</div>
          <a class="nav-link" href="#"><i class="bi bi-question-circle"></i> Helps</a>
          <a class="nav-link" href="#"><i class="bi bi-info-circle"></i> About us</a>

          <a class="nav-link mt-4" href="/logout"><i class="bi bi-box-arrow-right"></i> Log out</a>
        </nav>
      </div>


      <% if (!wishlist || !wishlist.products || wishlist.products.length === 0) { %>
      <div style="text-align: center;margin-left: 25%; margin-top: 30px;">

        <img style="object-fit: cover; width: 350px;" src="/image/Screenshot 2025-02-17 102728.png" alt="">
        <h4 style="display: block;">No items in the wishlistüòî</h4>
        <p style="font-weight: 600;">Add now, Buy Later.
          <br>
          Save your favourite beauty items here
        </p>
        <a href="/"><button style="background-color: purple;color: white;padding: 10px 10px;border: none; border-radius: 6px;">Start Shopping</button></a>
        <% } else { %>

        <div class="flex-grow-1">


          <div style="margin-top: 10px;margin-left: 10px;" class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">


            <% wishlist.products.forEach(product => { %>

            <div class="col" id="wishlist-item-<%= product._id %>">
              <div class="card h-100">
                <img src="<%= product.images[0] %>" class="card-img-top" alt="Product Image">
                <div class="card-body">
                  <h5 class="card-title"><%= product.name %></h5>
                  <p class="card-text"><i class="bi bi-currency-rupee"></i><%= product.price %></p>
                  <% if (product.stock <= 0) { %>
                  <p style="
                                        background-color: rgb(255, 255, 255);
                                        border: none;
                                        color: rgb(138, 0, 0);
                                        position: absolute;
                                        padding: 1px 20px;
                                        margin-top: -150px;
                                        margin-left: 85px;
                                        font-size: small;
                                        font-weight: bold;
                                      ">
                    Out of Stock
                  </p>
                  <% } else if(product.stock <=3) { %>
                  <p style="
                                        background-color: rgb(255, 255, 255);
                                        border: none;
                                        color: rgb(138, 0, 0);
                                        position: absolute;
                                        padding: 1px 20px;
                                        margin-top: -150px;
                                        margin-left: 85px;
                                        font-size: small;
                                        font-weight: bold;
                                      ">
                    Only few left
                  </p>
                  <% } %>
                  <% if (product.stock === 0) { %>
                  <button class="btn btn-secondary sold-out-btn ">
                    Sold Out
                  </button>
                  <% } else { %>
                  <button id="add-to-cart-btn-<%= product._id %>" class="btn btn-primary" onclick="addToCartFromWishlist('<%= product._id %>', 'add-to-cart-btn-<%= product._id %>')">
                    <i class="bi bi-bag-fill me-2"></i>Add to Cart
                  </button>

                  <% } %>
                  <button class="btn btn-primary removeWish" data-id="<%= product._id %>" onclick="removeFromWishlist('<%= product._id %>')">
                    <i class="bi bi-trash"></i> Remove
                  </button>
                </div>
              </div>
            </div>
            <% }); %>
          </div>



        </div>
      </div>

      <% } %>
    </div>
  </div>

  </div>
  </div>

  <script>
    async function addToCartFromWishlist(productId, buttonId) {
      const button = document.getElementById(buttonId);

      try {

        const response = await fetch(`/cart/add`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            productId
          })
        });

        const result = await response.json();

        if (result.success) {
          showToast("Item added to cart!", "purple");
          window.location.reload()

        } else {
          showToast("Failed to add item to cart!", "rgb(107, 38, 126)");
        }
      } catch (error) {
        console.error('Error adding product to cart:', error);
        showToast("‚ö†Ô∏è Error adding item to cart!", "purple");
      }
    }

    function showToast(message, bgColor) {
      Toastify({
        text: message,
        duration: 500,
        gravity: "bottom",
        position: "center",
        style: {
          background: bgColor
        },
        stopOnFocus: true,
      }).showToast();
    }
  </script>


  <script src="/script/search.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <script src="/script/wishlist.js"></script>
</body>

</html>